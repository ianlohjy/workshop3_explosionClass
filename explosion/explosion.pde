Explosion explosion;

void setup(){

size (1024,768);
background (204);

explosion = new Explosion(width/2,height/2,200,10,60);
explosion.build(); 
  
}


void draw(){
  background (204);
  if (explosion.energy > 0){
    explosion.start();
  }
  
  if (explosion.energy < 0){
    explosion = null;
  }
  
  
  
}
